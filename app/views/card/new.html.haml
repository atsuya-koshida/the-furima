.form-page
  = render "shared/form-head"
  .form-body
    .container
      .container__title
        クレジットカード情報入力
      .container__body
        .body__form
          .card-number__form
            %label{ style: "font-weight: bold;"} カード番号
            %span.require 必須
            = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
              = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              %ul.card-list{ style: "display: flex;"}
                %li.card-list__item{ style: "margin-left: 0;"}
                  = image_tag "credit-card_2.png"
                %li.card-list__item
                  = image_tag "credit-card_0.png"
                %li.card-list__item  
                  = image_tag "credit-card_1.png"
                %li.card-list__item  
                  = image_tag "credit-card_5.png"
                %li.card-list__item
                  = image_tag "credit-card_6.png"
                %li.card-list__item
                  = image_tag "credit-card_20.png"
              .card-date__form{ style: "margin-top: 24px;"}
                %label{ style: "font-weight: bold;"} 有効期限
                %span.require 必須
                %br/
                .select-wrap-half{ style: "display: inline-block"}
                  %select#exp_month{name: "exp_month", type: "text"}
                    %option{value: ""} --
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %span 月/
                .select-wrap-half{ style: "display: inline-block"}
                  %select#exp_year{name: "exp_year", type: "text"}
                    %option{value: ""} --
                    %option{value: "2019"}19
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  %span 年
              .card-cvc__form{ style: "margin-top: 24px;"}
                %span{ style: "font-weight: bold;"} セキュリティコード
                %span.require 必須
                %br/
                = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
                #card_token
                = submit_tag "追加する", id: "token_submit", class: "submit-btn"
    = render "shared/form-foot"