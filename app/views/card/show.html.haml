.form-page
  = render "shared/form-head"
  .form-body
    .container
      .container__title
        クレジットカード
      .container__body
        .body__form{ style: "margin: 50px 0;"}
          %label{ style: "font-weight: bold;"} 登録クレジットカード情報
          %br
          = "**** **** **** " + @default_card_information.last4
          %br
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = exp_month + " / " + exp_year
          = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
            %input{ type: "hidden", name: "card_id", value: "" }
            %button.submit-btn 削除する
            =link_to root_path do
              %button.back-btn もどる
  = render "shared/form-foot"